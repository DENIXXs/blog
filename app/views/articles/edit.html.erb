<!DOCTYPE html>
<html>
<head>
	<title>Edit Article</title>
</head>
<body>
	<%= form_for :article, url: article_path(@article), method: :put do |f|%> <br>
	
	<p>
		<%= f.label :title, "Заголовок" %><br>
		<%= f.text_field :title %><br>
	</p>
	<p>
		<%= f.label :text, "Text" %><br>
		<%= f.text_area :text %><br>
	</p>
	<p>
		<%= f.submit 'Послать' %>
	</p>
	<% end %>

</body>
</html>