<body>
<h1>Contact us</h1>
	<%= form_for :contact, url:contacts_path do |f|%><br>
		<% if @contact && @contact.errors.any? %>
		<p>
			<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%=msg%></li>
			<%end%>
			</ul>
		</p>
		<%end%>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %><br>
	</p>
	<p>
		<%= f.label :messege %><br>
		<%= f.text_area :messege %><br>
	</p>
	<p>
		<%= f.submit 'Послать' %>
	</p>
	<% end %>

</body>